# ========================================
# xLP Hedge Engine Configuration
# ========================================
# 所有配置通过环境变量提供，无需config.json
# 复制此文件为 .env 并填入真实值

# ========================================
# Exchange Configuration（必须）
# ========================================
EXCHANGE_NAME=lighter
EXCHANGE_PRIVATE_KEY=your_lighter_private_key_here
EXCHANGE_ACCOUNT_INDEX=0
EXCHANGE_API_KEY_INDEX=0
EXCHANGE_BASE_URL=https://mainnet.zklighter.elliot.ai
# Testnet: https://testnet.zklighter.elliot.ai

# ========================================
# Pushover Notifications（可选）
# ========================================
PUSHOVER_USER_KEY=your_pushover_user_key
PUSHOVER_API_TOKEN=your_pushover_api_token
PUSHOVER_ENABLED=true

# ========================================
# LP Holdings（必须）
# ========================================
JLP_AMOUNT=50000
ALP_AMOUNT=10000

# ========================================
# Hedging Thresholds
# ========================================
THRESHOLD_MIN=1.0              # 最小触发阈值 (%)
THRESHOLD_MAX=2.0              # 最大告警阈值 (%)
THRESHOLD_STEP=0.2             # 区间步长 (%)
ORDER_PRICE_OFFSET=0.2         # 挂单价格偏移 (%)
CLOSE_RATIO=40.0               # 每次平仓比例 (%)
TIMEOUT_MINUTES=20             # 限价单超时强平（分钟）

# ========================================
# Initial Offsets（可选，用于手动调整）
# ========================================
INITIAL_OFFSET_SOL=0.0
INITIAL_OFFSET_ETH=0.0
INITIAL_OFFSET_BTC=0.0
INITIAL_OFFSET_BONK=0.0

# ========================================
# Runtime Settings
# ========================================
CHECK_INTERVAL_SECONDS=60      # 检查间隔（秒）
LOG_LEVEL=INFO                 # DEBUG | INFO | WARNING | ERROR

# ========================================
# Solana RPC（可选）
# ========================================
RPC_URL=https://api.mainnet-beta.solana.com
# 或使用付费RPC: https://your-rpc-provider.com
